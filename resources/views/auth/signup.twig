{% extends 'templates/app.twig' %}

{% block content %}

<div class="row">
	
    <div class="col-md-6 col-md-offset-3">
    	<div class="panel panel-default">
    		<div class="panel-heading">  		
    		   {{ trans('messages.signup') }} 
    		</div>
    		<div class="panel-body">
    			<form action="{{path_for('auth.signup')}}" method="post">
    				<div class="form-group {{ errors.email ? 'has-error' : ''}}" >
    					<label for="email"> {{ trans('messages.email') }} </label>
    					<input type="email" name="email" id="email" placeholder="{{ trans('messages.emailDomain') }} " class="form-control" value="{{ old.email}}">
                        <span class="help-block">
                            {% if errors.email %}

                             {{errors.email | first}}
                            {% endif %}
                        </span>
    				</div>

    				<div class="form-group {{ errors.name ? 'has-error' : ''}}">
    					<label for="name">{{ trans('messages.name') }} </label>
    					<input type="text" name="name" id="name" placeholder="{{ trans('messages.yourName') }} " class="form-control" value="{{ old.name}}">
                         <span class="help-block">
                            {% if errors.name %}

                             {{errors.name | first}}
                            {% endif %}
                        </span>
    				</div>
    				<div class="form-group {{ errors.password ? 'has-error' : ''}}">
    					<label for="password">{{ trans('messages.password') }}</label>
    					<input type="password" name="password" id="password"  class="form-control" value="{{ old.name}}">
                         <span class="help-block">
                            {% if errors.password %}

                             {{errors.password | first}}
                            {% endif %}
                        </span>
    				</div>

    				<button type="submit" class="btn btn-danger">{{ trans('messages.signup') }} </button>

                    {{ csrf.field | raw}}
                    

    			</form>
    		</div>
    	</div>
    </div>
	
</div>

{% endblock %}